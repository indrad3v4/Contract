[flake8]
max-line-length = 100
exclude = .git,.cache/uv,__pycache__,*.pyc,*.pyo,*.pyd,build,dist
ignore = E203,W503  # These conflict with black formatting
per-file-ignores =
    # For files that have generated content like IFC schemas, we can be more lenient
    *IFC4X3_ADD1.py:E501,E402,F401,F403,F405
    *IFCOWL*.py:E501,E402,F401,F403
    # Allow more flexibility in test files
    test_*.py:E501

# Other settings
indent-size = 4
max-complexity = 10